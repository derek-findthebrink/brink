    "mongoose": "^4.3.0",
    "passport": "^0.3.2",
    "passport-local": "^1.0.0",
    "passport-local-mongoose": "^4.0.0",
    "q": "^1.4.1",
    "react": "^0.14.3",
    "react-addons-css-transition-group": "^0.14.8",
