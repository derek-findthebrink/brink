{
  "name": "brink-website",
  "version": "1.0.0",
  "description": "",
  "main": "app.coffee",
  "scripts": {
    "test": "mocha --compilers coffee:coffee-script --require coffee-script/register",
    "start": "PORT=2150 NODE_ENV=production coffee app.coffee",
    "start:dev": "PORT=2150 NODE_ENV=development nodemon app.coffee | bunyan",
    "dev": "browser-sync start --reload-delay 1200 --proxy localhost:2150 --files='views/**/*.jade, assets/**/*.css, assets/**/*.js'",
    "ui:css": "node-sass -w -o assets/css ui/css/index.sass",
    "ui:js": "watchify -dvo assets/bundle.js -t coffee-reactify --extension='coffee' --extension='cjsx' ui/js/index.coffee",
    "watch": "npm run ui:css & npm run ui:js",
    "deploy:staging": "git commit -am 'prep for pm2 deploy' && git push origin develop && pm2 deploy ecosystem.json staging",
    "ssh:staging": "sh config/ssh-staging.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/findthebrink/brink.git"
  },
  "author": "Brink Technology Co.",
  "license": "SEE LICENSE IN LICENSE",
  "bugs": {
    "url": "https://github.com/findthebrink/brink/issues"
  },
  "homepage": "https://github.com/findthebrink/brink#readme",
  "dependencies": {
    "async": "^1.5.0",
    "backbone": "^1.2.3",
    "body-parser": "^1.14.1",
    "bunyan": "^1.8.0",
    "chai": "^3.4.1",
    "coffee-reactify": "^4.0.0",
    "connect-flash": "^0.1.1",
    "cookie-parser": "^1.4.0",
    "express": "^4.13.3",
    "express-session": "^1.12.1",
    "jade": "^1.11.0",
    "jquery": "^2.1.4",
    "jquery-ui": "^1.10.5",
    "lodash": "^4.6.1",
    "moment": "^2.10.6",
    "mongoose": "^4.3.0",
    "morgan": "^1.6.1",
    "passport": "^0.3.2",
    "passport-local-mongoose": "^3.1.0",
    "q": "^1.4.1",
    "react": "^0.14.3",
    "react-addons-css-transition-group": "^0.14.8",
    "react-addons-transition-group": "^0.14.8",
    "react-dom": "^0.14.3",
    "request": "^2.70.0",
    "underscore": "^1.8.3",
    "uuid": "^2.0.1",
    "waypoints": "^4.0.0"
  }
}
