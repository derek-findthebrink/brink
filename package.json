{
  "name": "brink-website",
  "version": "1.0.0",
  "description": "",
  "main": "app.coffee",
  "scripts": {
    "test": "mocha --compilers coffee:coffee-script --require coffee-script/register",
    "start": "NODE_ENV=production coffee app.coffee",
    "start:dev": "coffee app.coffee | bunyan",
    "dev": "browser-sync start --reload-delay 1200 --proxy localhost:2150 --files='views/**/*.jade, ui/**/*.*, api/**/*.*'",
    "ui:css": "node-sass -w ./ui/css/index.sass ./assets/bundle.css",
    "ui:js": "watchify -dvo assets/bundle.js -t coffee-reactify --extension='coffee' --extension='cjsx' ui/js/index.coffee",
    "watch": "npm run ui:css & npm run ui:js",
    "deploy:staging": "git commit -am 'prep for pm2 deploy' && git push origin develop && pm2 deploy ecosystem.json staging",
    "ssh:staging": "sh tasks/ssh-server.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/findthebrink/brink.git"
  },
