{
  "apps" : [
    {
      "name"      : "brink-server",
      "script"    : "app.coffee",
      "env": {
        "COMMON_VARIABLE": "true"
      },
      "env_production" : {
        "NODE_ENV": "production",
        "PORT": 1005
      },
      "env_development": {
        "NODE_ENV": "development",
        "PORT": 3500
      },
      "env_staging": {
        "NODE_ENV": "staging",
        "PORT": 2150
      }
    },
    {
      "name": "brink-blog",
      "script": "api/services/blog/ghost-blog.coffee",
      "env_production": {
        "NODE_ENV": "production",
        "NODE_ENV": 1010
      },
      "env_development": {
        "NODE_ENV": "development",
        "PORT": 3600
      },
      "env_staging": {
        "NODE_ENV": "staging",
        "PORT": 2368
      }
    }
  ],
  "deploy": {
    "staging": {
      "forward-agent": "yes",
      "key": "config/brink-server.pem",
      "user": "ubuntu",
      "host": "staging.findthebrink.com",
      "ref": "origin/develop",
      "repo": "git@github.com:findthebrink/brink.git",
      "path": "~/programs/brink-website",
      "post-deploy": "npm install && pm2 startOrRestart ecosystem.json",
      "env" : {
        "NODE_ENV": "staging"
      }
    },
    "production": {
      "forward-agent": "yes",
      "key": "config/brink-server.pem",
      "user": "ubuntu",
      "host": "findthebrink.com",
      "ref": "origin/master",
      "repo": "git@github.com:findthebrink/brink.git",
      "path": "~/programs/production/brink-website",
      "post-deploy": "npm install && pm2 startOrRestart ecosystem.json",
      "env": {
        "NODE_ENV": "production"
      }
    }
  }
}
