{
  "apps" : [
    {
      "name"        : "brink-server",
      "script"      : "bin/server.coffee",
      "min-uptime"  : "10000s"
    },
    {
      "name"        : "brink-api-server",
      "script"      : "bin/api.coffee",
      "min-uptime"  : "10000s"
    }
  ],
  "deploy": {
    "staging": {
      "forward-agent": "yes",
      "key": "/home/derek/.ssh/brink-server.pem",
      "user": "ubuntu",
      "host": "staging.findthebrink.com",
      "ref": "origin/develop",
      "repo": "git@github.com:findthebrink/brink.git",
      "path": "~/programs/staging/brink-website",
      "post-deploy": "npm install && npm run build && pm2 startOrRestart ecosystem.json",
      "env": {
        "PM2": true,
        "NODE_ENV": "development"
      }
    },
    "production": {
      "forward-agent": "yes",
      "key": "config/brink-server.pem",
      "user": "ubuntu",
      "host": "findthebrink.com",
      "ref": "origin/develop",
      "repo": "git@github.com:findthebrink/brink.git",
      "path": "~/programs/production/brink-website",
      "post-deploy": "npm install && pm2 startOrRestart ecosystem.json",
      "env": {
        "PM2": true,
        "NODE_ENV": "production"
      }
    }
  }
}
