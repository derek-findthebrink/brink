{
  "apps" : [
    {
      "name"      : "brink-server",
      "script"    : "app.coffee",
      "env": {
        "COMMON_VARIABLE": "true"
      },
      "env_production" : {
        "NODE_ENV": "production"
      },
      "env_development": {
        "NODE_ENV": "dev"
      }
    }
  ],
  "deploy": {
    "development": {
      "forward-agent": "yes",
      "user": "derek",
      "host": "192.168.1.65",
      "ref": "origin/develop",
      "repo": "git@github.com:findthebrink/brink.git",
      "path": "~/programs/brink-server/",
      "post-deploy": "npm install && pm2 startOrRestart ecosystem.json",
      "env" : {
        "NODE_ENV": "development"
      }
    }
  }
}
