{
  "apps" : [
    {
      "name"      : "brink-server",
      "script"    : "app.coffee",
      // "env": {
      //   "COMMON_VARIABLE": "true"
      // },
      "env_production" : {
        "NODE_ENV": "production",
        "PORT": 5000
      },
      "env_development": {
        "NODE_ENV": "development",
        "PORT": 5200
      },
      "env_staging": {
        "NODE_ENV": "staging",
        "PORT": 5100
      },
      "min-uptime": "5000s"
    },
    {
      "name": "brink-blog",
      "script": "api/services/blog/ghost-blog.coffee",
      "env_production": {
        "NODE_ENV": "production",
        "NODE_ENV": 6000
      },
      "env_development": {
        "NODE_ENV": "development",
        "PORT": 6200
      },
      "env_staging": {
        "NODE_ENV": "staging",
        "PORT": 6100
      },
      "min-uptime": "5000s"
    }
  ],
  "deploy": {
    "staging": {
      "forward-agent": "yes",
      "key": "/home/derek/.ssh/brink-server.pem",
      "user": "ubuntu",
      "host": "staging.findthebrink.com",
      "ref": "origin/develop",
      "repo": "git@github.com:findthebrink/brink.git",
      "path": "~/programs/staging/brink-website",
      "post-deploy": "npm install && pm2 startOrRestart ecosystem.json",
    },
    "production": {
      "forward-agent": "yes",
      "key": "config/brink-server.pem",
      "user": "ubuntu",
      "host": "findthebrink.com",
      "ref": "origin/develop",
      "repo": "git@github.com:findthebrink/brink.git",
      "path": "~/programs/production/brink-website",
      "post-deploy": "npm install && pm2 startOrRestart ecosystem.json",
      "env": {
        "NODE_ENV": "production"
      }
    }
  }
}
