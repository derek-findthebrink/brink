{
  "apps" : [
    {
      "name"      : "brink-server",
      "script"    : "app.coffee",
      "env": {
        "COMMON_VARIABLE": "true"
      },
      "env_production" : {
        "NODE_ENV": "production"
      },
      "env_development": {
        "NODE_ENV": "development"
      },
      "env_staging": {
        "NODE_ENV": "staging",
        "PORT": 2150
      }
    }
  ],
  "deploy": {
    "staging": {
      "forward-agent": "yes",
      "key": "config/brink-server.pem",
      "user": "ubuntu",
      "host": "staging.findthebrink.com",
      "ref": "origin/develop",
      "repo": "git@github.com:findthebrink/brink.git",
      "path": "~/programs/brink-website",
      "post-deploy": "npm install && pm2 startOrRestart ecosystem.json",
      "env" : {
        "NODE_ENV": "staging",
        "PORT": 2150
      }
    },
    "production": {
      "forward-agent": "yes",
      "key": "config/brink-server.pem",
      "user": "ubuntu",
      "host": "findthebrink.com",
      "ref": "origin/master",
      "repo": "git@github.com:findthebrink/brink.git",
      "path": "~/programs/production/brink-website",
      "post-deploy": "npm install && pm2 startOrRestart ecosystem.json",
      "env": {
        "NODE_ENV": "production",
        "PORT": 1005
      }
    }
  }
}
